<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"

        card_view:contentPadding="0dp">

        <RelativeLayout
            android:id="@+id/relativeLayout_listnews_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">


            <ImageView
                android:id="@+id/imageView_listnews_coverimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="center"
                android:src="@drawable/aaa" />

            <tknews.project.tkhub.tknews.ui.font.Cobert
                android:id="@+id/textView_listnews_date_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:layout_alignBottom="@+id/shinebutton_listnews_heart"
                android:layout_alignLeft="@+id/textView_listnews_date"
                android:layout_alignStart="@+id/textView_listnews_date" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/shinebutton_listnews_heart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:src="@android:color/darker_gray"
                app:allow_random_color="false"
                app:btn_color="@color/appDrakYellow"
                app:btn_fill_color="@android:color/holo_red_light"
                app:siShape="@raw/heart" />


            <tknews.project.tkhub.tknews.ui.font.Cobert
                android:id="@+id/textView_listnews_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/black" />

            <tknews.project.tkhub.tknews.ui.font.FontSinhala
                android:id="@+id/textView_listnews_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView_listnews_date"
                android:layout_alignLeft="@+id/textView_listnews_date"
                android:layout_alignStart="@+id/textView_listnews_date"
                android:text="TextView sdsssdaaaasas"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@android:color/black" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>