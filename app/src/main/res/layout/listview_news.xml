<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:contentPadding="0dp"

        android:id="@+id/cardView">

        <RelativeLayout
            android:id="@+id/relativeLayout_listnews_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <tknews.project.tkhub.tknews.ui.font.Cobert
                android:id="@+id/_listnews_date_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textView_listnews_date"
                android:layout_alignStart="@+id/textView_listnews_date" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@android:color/darker_gray"
                android:id="@+id/shinebutton_listnews_heart"
                app:btn_color="@color/appDrakYellow"
                app:btn_fill_color="@android:color/holo_green_dark"
                app:allow_random_color="false"
                app:siShape="@raw/heart"/>





            <ImageView
                android:id="@+id/imageView_listnews_coverimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <tknews.project.tkhub.tknews.ui.font.Cobert
                android:id="@+id/textView_listnews_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <tknews.project.tkhub.tknews.ui.font.Cobert
                android:id="@+id/textView_listnews_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView_listnews_date"
                android:layout_alignLeft="@+id/textView_listnews_date"
                android:layout_alignStart="@+id/textView_listnews_date"
                android:text="TextView sdsssdaaaasas"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@android:color/white" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>